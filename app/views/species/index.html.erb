<% content_for :page_title, 'My Species' %>

<section class='section'>
  <div class='container'>
    <% @species.each do |species| %>
      <div class='card'>
        <div class='card-content'>
          <div class='media'>
            <div class='media-content'>
              <div class='is-italic'>
                <p class='title is-4'> 
                  <%= link_to species.latinName, species %> </p>
              </div>
            <p class='title is-6'> <%= species.commonName %> </p>
            </div>
          </div>
          <div class='content'>
            <%= species.description %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
