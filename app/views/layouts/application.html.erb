  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body>
<section class="hero is-primary">
  <div class='hero-head'>
  <div class='navbar'>
    <div class='container'>
      <div class='navbar-brand'>
        <%= link_to 'BiologyApp_RubyRails', root_path, class: 'navbar-item' %>
        <span class='navbar-burger burger' data-target='navbarNenuHeroA'>
          <span></span>
          <span></span>
          <span></span>
        </span>
      </div>
      <div id='navbarMenuHeroA' class='navbar-menu'>
        <div class='navbar-end'>
          <%= link_to 'Add New Species', new_species_path, class:'navbar-item' %>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= yield :page_title %>
      </h1>
    </div>
  </div>
</section>


<%= yield %>

</body>
</html>



